<resources>

    <style name="Theme.YukaApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yuka_green</item>
        <item name="colorPrimaryVariant">@color/nutriscore_a</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/nutriscore_b</item>
        <item name="colorSecondaryVariant">@color/nutriscore_c</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/nutriscore_a</item>
        <item name="android:navigationBarColor">@color/yuka_green</item>
        <item name="android:windowBackground">@color/gray_light</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="buttonStyle">@style/Widget.YukaApp.Button</item>
    </style>

    <style name="Widget.YukaApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/yuka_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="Widget.YukaApp.ScanButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/yuka_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">60dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">8dp</item>
        <item name="iconGravity">textTop</item>
        <item name="iconTint">@color/white</item>
        <item name="iconPadding">8dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>


</resources>
